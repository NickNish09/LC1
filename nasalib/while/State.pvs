State[V:TYPE+]: THEORY

BEGIN

  x,y: VAR V
  z:   VAR int

  State: TYPE+ = [V->int] CONTAINING (LAMBDA x: 0)

  s:   VAR State
  f:   VAR [State->int]

  assign(x,z)(s):State = (LAMBDA y: IF y = x THEN z ELSE s(y) ENDIF)
  assign(x,f)(s):State = assign(x,f(s))(s)

END State
